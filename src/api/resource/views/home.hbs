<div class="mt-4">
  <div class="row">

    {{#each shoes}}
      <div class="col-sm-6 col-lg-4">
        <div class="card" style="width: 18rem;">
          <a href="/shoes/{{this.slug}}" >
          <img src="{{this.image}}" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <h5 class="card-title">{{this.price}}</h5>
          </div>
          </a>
        </div>
      </div>
    {{/each}}
  </div>
</div>